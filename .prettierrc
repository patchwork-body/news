{
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "singleQuote": true,
  "printWidth": 120,
  "embeddedLanguageFormatting": "auto",
  "arrowParens": "avoid",
  "quoteProps": "as-needed",
  "semi": true,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.jsx?"],
      "options": {
        "parser": "typescript",
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false
      }
    },
    {
      "files": ["*.mdx"],
      "options": {
        "parser": "mdx"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "trailingComma": "none"
      }
    }
  ]
}
